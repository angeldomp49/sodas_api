<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <listener>
        <description>ServletContextListener</description>
        <listener-class>providers.BaseModelProvider</listener-class>
    </listener>
    <servlet>
        <servlet-name>Checker</servlet-name>
        <servlet-class>controllers.Checker</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FormHandler</servlet-name>
        <servlet-class>controllers.FormHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>configH</servlet-name>
        <servlet-class>controllers.configH</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Checker</servlet-name>
        <url-pattern>/check_api</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FormHandler</servlet-name>
        <url-pattern>/form</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>configH</servlet-name>
        <url-pattern>/c</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
